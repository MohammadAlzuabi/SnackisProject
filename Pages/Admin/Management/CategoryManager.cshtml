@page
@model SnackisProject.Pages.Admin.Management.CategoryManagerModel
@{
    ViewData["Title"] = "Category Manager";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Index">Startsida</a></li>
        <li class="breadcrumb-item"><a asp-page="/Admin/Management/Index">Admin kontrollpanel</a></li>
        <li class="breadcrumb-item active" aria-current="page">Category Manager</li>

    </ol>
</nav>

<p class="display-4 text-center">Category Manager</p>

<hr class="my-4" />

<div class="row justify-content-center">
    <div class="col-6 m-2">
        <form method="post" asp-page-handler="CreateCategory">
            <input asp-for="Category.Id" type="hidden" />
            <div class="row justify-content-center">
                <div class="col-8">
                    <input asp-for="Category.Name" class="form-control w-100 mr-2" />
                </div>
                <div class="col-4">
                    <input type="submit" value="Add New Category" class="btn btn-info" />
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Categories != null)
        {
            @foreach (var category in Model.Categories.OrderBy(r => r.Name))
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                            <div class="col">
                                <a class="btn btn-primary" asp-page="SubCategoryManager" asp-route-categoryId="@category.Id">Manage Subcategories</a>
                            </div>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<hr />
<div class="badge bg-primary text-wrap" style="width: 80rem;">
    <a class="btn btn-primary" asp-page="ManageCategory">Update Category</a>
</div>
<hr />
